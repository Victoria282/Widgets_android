<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/normal_margin">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/revenue_title"
        style="@style/Theme.Taxcom.TextRegular16SecondaryBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:text="@string/casdesk_kit_indicator_revenue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/revenue_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Widget.CheckBoxStyle"
        app:layout_constraintBottom_toBottomOf="@+id/revenue_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/revenue_title"
        app:useMaterialThemeColors="false" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/refunds_title"
        style="@style/Theme.Taxcom.TextRegular16SecondaryBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:text="@string/casdesk_kit_indicator_refunds"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/revenue_title" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/refunds_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Widget.CheckBoxStyle"
        app:layout_constraintBottom_toBottomOf="@+id/refunds_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/refunds_title"
        app:useMaterialThemeColors="false" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/avg_receipts_title"
        style="@style/Theme.Taxcom.TextRegular16SecondaryBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:text="@string/casdesk_kit_indicator_average_revenue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/refunds_title" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/avg_receipts_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Widget.CheckBoxStyle"
        app:layout_constraintBottom_toBottomOf="@+id/avg_receipts_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/avg_receipts_title"
        app:useMaterialThemeColors="false" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/count_receipts_title"
        style="@style/Theme.Taxcom.TextRegular16SecondaryBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:text="@string/casdesk_kit_indicator_number_of_checks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avg_receipts_title" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/count_receipts_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Widget.CheckBoxStyle"
        app:layout_constraintBottom_toBottomOf="@+id/count_receipts_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/count_receipts_title"
        app:useMaterialThemeColors="false" />
</androidx.constraintlayout.widget.ConstraintLayout>